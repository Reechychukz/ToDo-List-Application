@model IEnumerable<ToDo_List.Models.Item>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
     <div class="row pt-4">
         <div class="col-6">
             <h2 class="text-primary">MY TO-DO LIST</h2>
             <form method="get" asp-action="Index">
                 <p>
                     <input type="search" placeholder="Enter Task..." value="@ViewData["GetTasks"]" name="TaskSearch" style="width:250px;" />
                     <input type="submit" value="Search" class="btn btn-info" /> |
                     <a asp-action="Index">Get all Tasks</a>
                 </p>
             </form>
         </div>

        <div class="col-6 text-right">
            
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add New Task
            </a>
            
            
        </div>
      </div>

    <br /><br />
    @if(Model.Count() > 0)
     {
<table class="table table-bordered table-responsive-sm table-hover" style="margin:25px 0; font-size: 1em; font-family:sans-serif; min-width:400px;box-shadow:0 0 10px #bbcbe5">
    <thead style="background-color: #007bff; color: #ffffff">
        <tr>
            <th style="background-color: #007bff">
                <h3 class="text-center">Tasks</h3>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr style="border-bottom:thin solid #007bff"class="active">

                <td width="80%">@obj.Items</td>
                <td class="text-center" style="padding:12px 15px">
                    <div class="w-60 btn-group" role="group">
                        <a asp-controller="Item" asp-route-Id="@obj.Id" asp-action="Info" class="btn btn-info mx-2">
                            <i class="fas fa-info"></i>
                        </a>
                        <a asp-controller="Item" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-controller="Item" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

     }

     else
     {
        <p>No task exists</p>
     }
     
</div>