@model ToDo_List.Models.Item

<form method="get" asp-action="Info">
    <div class="border p-2">

        <div class="form-group row">
            <h2 class="text-info pl-3"> Task Details </h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Items"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Items"disabled class="form-control" />
                        <span asp-validation-for="Items" class="text-danger"></span>
                    </div>

                    <div class="mt-4 col-4">
                        <label asp-for="Info"></label>
                    </div>
                    <div class="mt-4 col-8">
                        <textarea asp-for="Info" disabled style="height:auto;resize:none; max-height:400px;overflow:auto" class="form-control">
                            
                        </textarea>
                        <span asp-validation-for="Info" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <a asp-controller="Item" asp-action="Index" class="btn btn-danger w-100"><i class="fas fa-sign-out-alt"></i>&nbsp; Exit</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>
